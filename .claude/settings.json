{
  "plansDirectory": "./plans",
  "respectGitignore": true,
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "auto",
  "mcpToolSearchThreshold": "auto:5",
  "permissions": {
    "allow": [
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(pytest *)",
      "Bash(python *)",
      "Bash(pip install *)",
      "Bash(uv *)",
      "Bash(cargo *)",
      "Bash(go *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Task(agent_type=general-purpose)",
      "Task(agent_type=Explore)",
      "Task(agent_type=Plan)",
      "Task(agent_type=Bash)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)"
    ]
  },
  "hooks": {
    "Setup": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python /Users/caseysimon/HealthAppTransfer/.claude/hooks/project-setup.py",
            "timeout": 15000
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python /Users/caseysimon/HealthAppTransfer/.claude/hooks/permission-request.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python /Users/caseysimon/HealthAppTransfer/.claude/hooks/notification.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python /Users/caseysimon/HealthAppTransfer/.claude/hooks/user-prompt-submit.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python /Users/caseysimon/HealthAppTransfer/.claude/hooks/subagent-tracker.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python /Users/caseysimon/HealthAppTransfer/.claude/hooks/subagent-tracker.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python /Users/caseysimon/HealthAppTransfer/.claude/hooks/tool-failure-tracker.py",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
